<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hr.learn.mapper.UserMapper">
    <!--配置二级缓存-->
    <cache eviction="LRU" flushInterval="100000" size="1024" readOnly="true"/>

   <select id="findAll" resultType="com.hr.learn.model.User">
       select id,name,password from ssm_user
   </select>

    <select id="findById" parameterType="int" resultType="com.hr.learn.model.User">
        select id,name,password from ssm_user
        where id=#{id}
    </select>
</mapper>